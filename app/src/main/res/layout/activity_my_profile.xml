<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfile">

    <ImageView
        android:id="@+id/imageprofile"
        android:layout_width="229dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/aime" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/imageprofile"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="175dp"
        android:text="Irakuzwa Jean Aime"
        android:textSize="25dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="320dp"
        android:id="@+id/view1"
    />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/track"
        android:layout_height="wrap_content"
        android:text="Track :"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/view1"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:id="@+id/track_name"
        android:layout_toRightOf="@+id/track"/>
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/Country"
        android:layout_height="wrap_content"
        android:text="Country :"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/track"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Countryname"
        android:layout_below="@+id/track_name"
        android:layout_marginLeft="100dp"
        android:text="Rwanda"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/Email"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/Country"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/emailname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Countryname"
        android:layout_marginLeft="100dp"
        android:text="aimeirak10@gmail.com"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/phone"
        android:layout_height="wrap_content"
        android:text="Phone :"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/Email"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailname"
        android:layout_marginLeft="100dp"
        android:text="+250782228123"
        android:id="@+id/phonenumber"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/slack"
        android:layout_height="wrap_content"
        android:text="Slack Username :"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/phone"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonenumber"
        android:layout_marginLeft="170dp"
        android:text="Aime Irak"
        android:id="@+id/slackname"
        android:textSize="20dp" />
</RelativeLayout>